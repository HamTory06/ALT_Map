<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weather_btn_layout">

        <ImageView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/sunny_btn"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_baseline_wb_sunny_24"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:drawableTop="@drawable/ic_baseline_wb_sunny_24" />

        <ImageView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/cloud_btn"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_baseline_cloud_24"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:drawableTop="@drawable/ic_baseline_wb_sunny_24" />
        <ImageView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/rain_btn"
            android:paddingVertical="10dp"
            android:src="@drawable/rain"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:drawableTop="@drawable/rain" />
    </LinearLayout>



    <FrameLayout
        android:id="@+id/sub_frame_layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/weather_btn_layout"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>